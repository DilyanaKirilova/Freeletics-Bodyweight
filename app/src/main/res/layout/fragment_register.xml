<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg"
    tools:context="com.freeletics.dilyana.freeletics.fragments.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_gravity="center">


        <EditText
            android:id="@+id/et_fr_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:maxLines="1"
            android:maxLength="35"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_fr_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:maxLines="1"
            android:maxLength="35"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_fr_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:maxLines="1"
            android:maxLength="35"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_fr_password_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="35"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_fr_password_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="35"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_fr_create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create new account"
            android:textColor="@color/whiteColor"
            android:background="@color/blueColor"
            android:gravity="center"/>
    </LinearLayout>

</ScrollView>
